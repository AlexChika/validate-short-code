{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "_version": "20.10.0",

  "exclude": ["node_modules"],

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "ES2022",
    "target": "es2022",
    "sourceMap": true,
    "noEmit": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true
  }
}
